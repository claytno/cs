{% if type == "success" %}
{% set lightestcolor = "green-50" %}
{% set lightercolor = "green-100" %}
{% set basecolor = "green-400" %}
{% set mediumcolor = "green-500" %}
{% set darkcolor = "green-800" %}
{% elseif type == "error" %}
{% set lightestcolor = "red-50" %}
{% set lightercolor = "red-100" %}
{% set basecolor = "red-400" %}
{% set mediumcolor = "red-500" %}
{% set darkcolor = "red-800" %}
{% else %}
{% set lightestcolor = "blue-50" %}
{% set lightercolor = "blue-100" %}
{% set basecolor = "blue-400" %}
{% set mediumcolor = "blue-500" %}
{% set darkcolor = "blue-800" %}
{% endif %}
<div class="max-w-4xl mx-auto">
    <div class="rounded-md p-4 bg-{{ lightestcolor }}">
        <div class="flex">
            <div class="shrink-0">
                <svg class="size-5 text-{{ basecolor }}" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M2 12C2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10S2 17.523 2 12Zm13.707-1.293a1 1 0 0 0-1.414-1.414L11 12.586l-1.793-1.793a1 1 0 0 0-1.414 1.414l2.5 2.5a1 1 0 0 0 1.414 0l4-4Z" clip-rule="evenodd"/>
                </svg>
            </div>
            <div class="ml-3">
                <p class="text-sm font-medium text-{{ darkcolor }}">{{ message|raw }}</p>
            </div>
            <div class="ml-auto pl-3">
                <div class="-mx-1.5 -my-1.5">
                    <button type="button" class="inline-flex rounded-md bg-{{ lightestcolor }} p-1.5 text-{{ mediumcolor }} hover:bg-{{ lightercolor}} focus:ring-2 focus:ring-{{ mediumcolor }} focus:ring-offset-2 focus:ring-offset-{{ lightestcolor }} focus:outline-offset-2" onclick="this.parentElement.parentElement.parentElement.parentElement.parentElement.remove();">
                        <svg class="size-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18 17.94 6M18 18 6.06 6"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>