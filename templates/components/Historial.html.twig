<div {{ attributes }} data-poll class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
    <div class="p-5 border-b border-gray-200">
        <h3 class="text-lg font-medium">Actividades Recientes</h3>
        <p class="text-sm text-gray-500">
        Registro de eventos
        </p>
    </div>
    <div class="p-5">
        <div class="space-y-3" id="activities-list">
        {% for actividad in this.actividades %}
            <div class="flex items-start gap-3">
                <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-1 text-sm">
                        <div class="mr-1">
                            {% if actividad.icono == 1 %}
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path><polyline points="10 17 15 12 10 7"></polyline><line x1="15" y1="12" x2="3" y2="12"></line></svg>
                            {% elseif actividad.icono == 2 %}
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-red-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                            {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-amber-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                            {% endif %}
                        </div>
                        <span class="font-medium">{{ actividad.texto }}</span>
                    </div>
                    <p class="text-xs text-gray-500 truncate mt-0.5">
                    {{ actividad.detalle|default("") }}
                    </p>
                </div>
                <time class="text-xs text-gray-500 whitespace-nowrap">
                {{ actividad.tiempo }}
                </time>
            </div>
        {% endfor %}
        </div>
    </div>
</div>